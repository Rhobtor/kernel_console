# Raspberry Pi 4 Firmware Configuration
# /boot/firmware/config.txt

# Enable 64-bit ARM mode
arm_64bit=1

# Custom kernel
kernel=kernel8-console-v1.img

# Custom initramfs
initramfs initramfs-console-v2.cpio.gz followkernel

# Disable auto-initramfs handling
#auto_initramfs=1

# GPU memory allocation (can adjust if needed)
gpu_mem=256

# Display configuration (optional)
hdmi_group=1
hdmi_mode=16

# Serial console (for debugging)
enable_uart=1

# Other recommended settings
over_voltage=0
arm_freq=1800
